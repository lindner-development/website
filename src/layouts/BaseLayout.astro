---
import type { Meta } from "../meta";
import { FloatingActionButtons } from "../components/FloatingActionButtons/FloatingActionButtons";
import Cookies from "../components/Cookies.astro";

const { language } = Astro.params;

export interface Props {
  meta?: Meta;
  noCookieDialog?: boolean;
}

const { meta }: Props = Astro.props;
const langTag = language == "de" ? "de" : "en";

let url = Astro.url;
if(Astro.site) {
  url.hostname = Astro.site.hostname;
}
