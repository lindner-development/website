    <meta name="designer" content="Lindner IT" />
    <meta name="publisher" content="Lindner IT" />
    <meta name="coverage" content="worldwide" />
    <meta name="rating" content="general" />
    <meta name="rating" content="safe for kids" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    {
      language && (
        <>
          {language == "de" && (
            <link
              rel="alternate"
              hreflang="en"
              href={url.toString().replace("/de/", "/en/")}
            />
            <link
              rel="alternate"
              hreflang="x-default"
              href={url.toString().replace("/de/", "/en/")}
            />
          )}
          {language == "en" && (
            <link
              rel="alternate"
              hreflang="de"
              href={url.toString().replace("/en/", "/de/")}
            />
            <link
              rel="alternate"
              hreflang="x-default"
              href={url.toString()}
            />
          )}
          {language && (
            <link
              rel="alternate"
              hreflang={language}
              href={Astro.url.toString()}
            />
          )}
        </>
      )
    }

    {
      meta && (
        <>
          <title>{meta.title}</title>
          <meta name="title" content={meta.title} />
          <meta name="subject" content={meta.subject} />
          <meta name="description" content={meta.description} />
          <meta name="classification" content={meta.description} />
          <meta name="summary" content={meta.summary} />
          <meta name="abstract" content={meta.summary} />
          <meta name="keywords" content={(meta.keywords ?? []).join(", ")} />

          <meta name="url" content={url} />
          <meta name="identifier-url" content={url} />
          <link rel="canonical" href={url} />
          {meta.revisedAt && (
            <meta name="revised" content={meta?.revisedAt.toString()} />
          )}
          <meta property="og:type" content="website" />
          <meta property="og:url" content={url} />
          <meta property="og:title" content={meta.opengraphTitle} />
          <meta property="og:description" content={meta.opengraphDescription} />
          {meta.opengraphImage && (
            <meta
              property="og:image"
              content={new URL(meta?.opengraphImage, Astro.url)}
            />
          )}
          <meta property="twitter:card" content="summary_large_image" />
          <meta property="twitter:url" content={url} />
          <meta property="twitter:title" content={meta.twitterTitle} />
          <meta
            property="twitter:description"
            content={meta.twitterDescription}
          />
          {meta.twitterImage && (
            <meta
              property="twitter:image"
              content={new URL(meta?.twitterImage, url)}
            />
          )}
          {meta.jsonld &&
            meta.jsonld.map((item) => (
              <script
                type="application/ld+json"
                set:html={JSON.stringify(item)}
              />
            ))}
        </>
      )
    }
    <style lang="scss">
      @use "src/scss/colors";
      @use "src/scss/mixins";
      @import "@fontsource/mitr";

      :root {
        @include mixins.light-theme;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          @include mixins.dark-theme;
        }
      }

      :root[data-theme="dark"] {
        @include mixins.dark-theme;
      }

      :root[data-theme="light"] {
        @include mixins.light-theme;
      }

      body {
        background: colors.$background;
        color: colors.$foreground;
        font-family: "Mitr", sans-serif;
        margin: 0;
        box-sizing: border-box;
      }
    </style>
