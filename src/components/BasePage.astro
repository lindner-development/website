      href="/favicon-76.png"
    />

    <link
      rel="apple-touch-icon"
      type="image/webp"
      sizes="72x72"
      href="/favicon-72.webp"
    />
    <link
      rel="apple-touch-icon"
      type="image/png"
      sizes="72x72"
      href="/favicon-72.png"
    />

    <meta name="msapplication-TileImage" content="./favicon-152.png" />
    <meta name="msapplication-TileColor" content="#0093e7" />
    <meta name="theme-color" content="#0093e7" />

    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#0093e7" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="format-detection" content="telephone=yes" />
    <meta name="HandheldFriendly" content="true" />

    <meta name="generator" content={Astro.generator} />
    <meta name="revisit-after" content="7 days" />
    <meta name="distribution" content="web" />
    <meta name="robots" content="index, follow" />

    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta http-equiv="Content-Script-Type" content="text/javascript" />
    <meta http-equiv="cache-control" content="public" />
    <meta
      name="no-email-collection"
      content="https://www.unspam.com/noemailcollection/"
    />
    <meta name="copyright" content="Lindner IT" />
    <meta name="author" content="Lindner IT" />
    <meta name="designer" content="Lindner IT" />
    <meta name="publisher" content="Lindner IT" />
    <meta name="coverage" content="worldwide" />
    <meta name="rating" content="general" />
    <meta name="rating" content="safe for kids" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {
      meta && (
        <>
          <title>{meta.title}</title>
          <meta name="title" content={meta.title} />
          <meta name="subject" content={meta.subject} />
          <meta name="description" content={meta.description} />
          <meta name="classification" content={meta.description} />
          <meta name="summary" content={meta.summary} />
          <meta name="abstract" content={meta.summary} />
          <meta name="keywords" content={(meta.keywords ?? []).join(", ")} />

          <meta name="url" content={Astro.url} />
          <meta name="identifier-url" content={Astro.url} />
          <link rel="canonical" href={Astro.url} />
          {meta.revisedAt && (
            <meta name="revised" content={meta?.revisedAt.toString()} />
          )}
          <meta property="og:type" content="website" />
          <meta property="og:url" content={Astro.url} />
          <meta property="og:title" content={meta.opengraphTitle} />
          <meta property="og:description" content={meta.opengraphDescription} />
          {meta.opengraphImage && (
            <meta
              property="og:image"
              content={new URL(meta?.opengraphImage, Astro.url)}
            />
          )}
          <meta property="twitter:card" content="summary_large_image" />
          <meta property="twitter:url" content={Astro.url} />
          <meta property="twitter:title" content={meta.twitterTitle} />
          <meta
            property="twitter:description"
            content={meta.twitterDescription}
          />
          {meta.twitterImage && (
            <meta
              property="twitter:image"
              content={new URL(meta?.twitterImage, Astro.url)}
            />
          )}
          {meta.jsonld &&
            meta.jsonld.map((item) => (
              <script
                type="application/ld+json"
                set:html={JSON.stringify(item)}
              />
            ))}
        </>
      )
    }
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    <script src="../firebase.ts"></script>
    <script src="../clarity.ts"></script>
    <script src="../console-script.ts"></script>
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .viewport-base {
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    {!noCookieDialog && <CookieDialog client:only />}

    <div class="viewport-base">
      <Header />
      <main><slot /></main>
    </div>
    <Footer />
  </body>
</html>
