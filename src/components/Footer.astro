---
import { PageFooter } from "./PageFooter/PageFooter";

const { language } = Astro.params;
const currentLanguage = language === "de" ? "de" : "en";

const pathAfterLanguage = Astro.url.pathname.replace(`/${language}/`, "");
const germanLink = `/de/${pathAfterLanguage}`;
const englishLink = `/en/${pathAfterLanguage}`;
---

<PageFooter
    currentLanguage={currentLanguage}
    germanLink={germanLink}
    englishLink={englishLink}
/>
