---
import type { Meta } from "../meta";
import BasePage from "./BasePage.astro";

export interface Props {
  meta?: Meta;
  noCookieDialog?: boolean;
}

const { meta, noCookieDialog }: Props = Astro.props;
---

<style lang="scss">
  article {
    margin: 1.5rem 12rem;

    @media screen and (max-width: 768px) {
      margin: 1.5rem 1rem;
    }
  }
</style>

<BasePage {meta} noCookieDialog={noCookieDialog}>
  <article>
    <slot />
  </article>
</BasePage>
